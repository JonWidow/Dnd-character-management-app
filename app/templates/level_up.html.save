{% extends "base.html" %}

{% block title %}Level Up {{ character.name }}{% endblock %}

{% block content %}
<div class="max-w-3xl mx-auto p-6">
    <h1 class="text-3xl font-bold text-blue-800 mb-4">Level Up: {{ character.name }}</h1>

    <p class="mb-4">
        You are about to level up from <strong>Level {{ character.level }}</strong> to
        <strong>Level {{ character.level + 1 }}</strong> as a <strong>{{ character.char_class.name }}</strong>.
    </p>

    <form method="POST" action="{{ url_for('level_up_character', char_id=character.id) }}">
        <!-- Ability Score Improvement (ASI) -->
        {% if asi_options %}
            <div class="mb-6 p-4 border rounded bg-gray-50">
                <h2 class="font-semibold text-gray-700 mb-2">Ability Score Improvement</h2>
                <p class="text-sm text-gray-600 mb-2">
                    You can increase your ability scores. Choose one of the following options:
                </p>
                {% for i, option in enumerate(asi_options, start=1) %}
                    <label class="block mb-1">
                        <input type="radio" name="asi_choice" value="{{ i }}" required>
                        {{ option.description }}
                    </label>
                {% endfor %}
            </div>
        {% endif %}

        <!-- Hit Points Increase -->
        <div class="mb-6 p-4 border rounded bg-gray-50">
            <h2 class="font-semibold text-gray-700 mb-2">Hit Points</h2>
            <p class="text-sm text-gray-600 mb-2">
                Current Max HP: <strong>{{ character.max_hp }}</strong><br>
                New Max HP after leveling: <strong>{{ character.max_hp }}</strong>
            </p>
        </div>

        <!-- Spellcasting -->
        {% if new_spell_slots or new_known_spells %}
            <div class="mb-6 p-4 border rounded bg-gray-50">
                <h2 class="font-semibold text-gray-700 mb-2">Spellcasting</h2>

                {% if new_spell_slots %}
                    <p class="text-sm text-gray-600 mb-2">New Spell Slots:</p>
                    <ul class="list-disc list-inside mb-2">
                        {% for level, slots in new_spell_slots.items() %}
                            <li>Level {{ level }}: {{ slots }} slot(s)</li>
                        {% endfor %}
                    </ul>
                {% endif %}

                {% if new_known_spells %}
                    <p class="text-sm text-gray-600 mb-2">New Spells Available:</p>
                    <div class="max-h-64 overflow-y-auto border rounded p-2 mb-2">
                        {% for spell in new_known_spells %}
                            <label class="flex items-center justify-between py-1">
                                <span>Lv {{ spell.level }} Â— {{ spell.name }}</span>
                                <input type="checkbox" name="new_spells" value="{{ spell.id }}">
                            </label>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        {% endif %}

        <!-- Submit -->
        <div class="flex justify-end space-x-2">
            <a href="{{ url_for('character_details', char_id=character.id) }}"
               class="px-3 py-2 bg-gray-200 rounded hover:bg-gray-300">Cancel</a>
            <button type="submit"
                    class="px-3 py-2 bg-green-600 text-white rounded hover:bg-green-700">
                Level Up
            </button>
        </div>
    </form>
</div>
{% endblock %}
